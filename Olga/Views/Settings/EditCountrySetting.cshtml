@model Olga.Models.CountrySettingViewModel

@{
    ViewBag.Title = @Resources.Title.EditCountrySetting;
    var flagSrc = $"{Model.CountryId}.gif";
}


    <div class="container">
        <h3 class="alert-success">
            @Model.Country.Name
            <img style="margin-left: 15px; height: 20px;" src="~/Content/images/countries/@flagSrc" />
        </h3>
        @Resources.Title.EditCountrySetting

        @using (Html.BeginForm("UpdateCountrySetting", "Settings", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CountryId)

                <div class="form-group">
                    @Html.LabelFor(model => model.GtinActive, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.GtinActive)
                            @Html.ValidationMessageFor(model => model.GtinActive, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EanActive, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.EanActive)
                            @Html.ValidationMessageFor(model => model.EanActive, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
